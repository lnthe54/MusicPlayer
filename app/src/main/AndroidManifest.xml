<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lnthe54.musicplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_beats_playing"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon_beats_playing"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.PlayMusicActivity" />
        <activity android:name=".view.activity.SongAccordingAlbum" />
        <activity android:name=".view.activity.SongAccordingArtist" />

        <service android:name=".service.PlayMusicService" />

        <receiver android:name=".receivers.NextMusicBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.lnthe54.musicplayer.ACTION_NEXT" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.PrevMusicBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.lnthe54.musicplayer.ACTION_PREV" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.HeadSetReceiver">
            <intent-filter>
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.PlayPauseMusicBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.lnthe54.musicplayer.ACTION_PLAY_PAUSE" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.RemoteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>