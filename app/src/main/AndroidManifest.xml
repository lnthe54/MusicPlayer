<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lnthe54.musicplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.PlayMusicActivity" />
        <activity android:name=".view.activity.SongAccordingAlbum" />
        <activity android:name=".view.activity.SongAccordingArtist" />

        <service android:name=".service.PlayMusicService" />

        <receiver android:name=".receivers.NextMusicBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.lnthe54.musicplayer.NEXT_MUSIC" />
            </intent-filter>
        </receiver>

        <receiver android:name=".receivers.PlayPauseMusicBroadcastReceiver">
            <intent-filter>
                <action android:name="com.example.lnthe54.musicplayer.PAUSE_MUSIC" />
            </intent-filter>
        </receiver>
    </application>

</manifest>